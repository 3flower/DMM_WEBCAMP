
<h2>User info</h2>
<div class="error_messages">
  <%= render "devise/shared/error_messages", resource: @user %>
</div>

<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :profile_image %><br>
    <%= f.attachment_field :profile_image %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br>
    <%= f.text_area :introduction %>
  </div>

  <div class="actions">
    <%= f.submit "Update User" %>
  </div>
<% end %>