<div class="container">
  <div class="row">
  	<%= render "books/user_bookNew", book: @book, user: @user %>

  	<div class="col-xs-9">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @user_books.each do |book| %>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, class: "attachment user profile_image fallback", fallback: "no_image.jpg",size:"50x50" %></td>
                <% end %>
              <td>
                <div class="btn1">
                  <%= link_to book.title, book_path(book) %>
                </div>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>