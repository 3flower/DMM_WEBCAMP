<div class="container">
  <div class="row">
  	<%= render "books/user_bookNew", book: @book, user: @user %>
  	<div class="col-xs-9">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
              	<%= attachment_image_tag user, :profile_image, :fill, 50, 50, class: "attachment user profile_image fallback", fallback: "no_image.jpg",size:"50x50" %>
            	</td>
              <td>
                <%= user.name %>
              </td>
              <td>
              	<%= link_to "show", user_path(user) %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>