<div class="edit">
<h1>Editing Book</h1>
<div class="new">
<%= form_for(@book) do |f| %>
<%= render partial: "layouts/error_message", locals: {model: @book} %>
    <div class="new-book">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </div>
    <div class="new-book">
    	<%= f.label :body %><br>
        <%= f.text_area :body %>
    </div>
    <div class="btn">
    	<%= f.submit 'Update Book' %>
    </div>
<% end %>
</div>

<div class="edit_link">
<%= link_to "show", book_path(@book) %>
<span> | </span>
<%= link_to "Back", books_path %>
</div>
</div>